                                "startTime": {"type": "string", "required": false},
                                "synchPoint": {"type":"string", "required": false},  
                                "scenImg": {"type": "string", "required": false, "pattern": "^[a-zA-Z0-9_./-]*$"},
                                "action": {"type": "object",
                                    "properties": {
                                        "text": {"type": "string", "required": true}},
                                    "additionalProperties": false},
                                "comment": {"type": "object",
                                    "properties": {
                                        "text": {"type": "string", "required": true}},
                                    "additionalProperties": false}},                                
                            "additionalProperties": false}},
                    "mcq": {"type":"object",
                        "properties": {
                            "title": {"type": "string", "required": true, "maxLength":40 ,"pattern" : "^[a-zA-Z0-9_ .()'¿?¡!-]*$"},
                            "text": {"type": "string", "required": true , "maxLength":80 ,"pattern" : "^[a-zA-Z0-9_ .()'¿?¡!-]*$"},
                            "points": {"type": "number", "required": false},                            
                            "answers": {"type":"array", "required": true,
                                "items": {"type": "object", "minItems": 1,
                                    "properties": {
                                        "text": {"type": "string", "required": true, "pattern" : "^[a-zA-Z0-9_ .()'¿?¡!-]*$"},
                                        "feedback": {"type":"string", "required": false ,"pattern" : "^[a-zA-Z0-9_ .()'¿?¡!-]*$"},
                                        "valid": {"type":"string", "required": false ,"pattern" : "^[y]$", "default": "n"},
                                        "percent" : {"type": "number", "required": false, "minimum": 0, "maximum": 100},
                                        "nextId": {"type":"number", "required": false}},
                                    "additionalProperties": false}}},
                        "additionalProperties": false}},
                "additionalProperties": false}}                
    },
