                    "nextId": {"type": "number", "required": true},
                    "messages": {"type": "array", "required": true, "minItems": 1,
                        "items": {"type": "object",
                            "properties": {
                                "name": {"type": "string", "maxLength": 35 ,"required": true},
                                "param": {"type": "string", "required": false},
                                "srcN": {"type":"number", "enum": [1,2,3,4,5,6,7], "required": true},
                                "destN": {"type":"number", "enum": [1,2,3,4,5,6,7], "required": true},
                                "type": {"type": "string", "enum": ["REQUEST","RESPONSE","ONEWAY"], "default": "ONEWAY", "required": false},
                                "length": {"type": "number", "minimum": 10, "required": false},
                                "treatment": {"type": "number", "minimum": 0, "maximum": 100, "required": false},
