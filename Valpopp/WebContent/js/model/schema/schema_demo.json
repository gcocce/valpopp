                    "propagTime": {"type":"number", "minimum": 10, "maximum": 40, "required":true},
                    "throughput": {"type":"number", "minimum": 10, "maximum": 8000, "required":true}},
                "additionalProperties": false}},
        "sequences" : { "type" : "array", "required": true, "minItems": 1,
            "items": {"type": "object",
                "properties": {
